<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    <!-- Compiled and minified CSS -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

    <link rel="stylesheet" href="~/Content/materialize.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>
<body>
<script>
    $('.dropdown-button').dropdown({
        
        constrainWidth: true, // Does not change width of dropdown to that of the activator
        hover: true, // Activate on hover
        }
    );
</script>
<div class="navbar-fixed grey">
    <ul id="dropdown1" class="dropdown-content">
        <li>@Html.ActionLink("Картины", "Index", "Artworks", new {area = ""}, new {@class = "active"})</li>
        <li>@Html.ActionLink("Направления", "Contact", "Home", new {area = ""}, new {@class = "active"})</li>
        <li>@Html.ActionLink("Период", "Index", "Home", new {area = ""}, new {@class = "active"})</li>
        <li>@Html.ActionLink("Школа", "Index", "Home", new {area = ""}, new {@class = "active"})</li>

    </ul>
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo"><i class="material-icons">cloud</i>LASER EXPERTISE</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>
                    @Html.ActionLink("Главная", "Index", "Home", new {area = ""}, new {@class = "active"})
                </li>
                <li>
                    @Html.ActionLink("Художники", "Index", "Home", new {area = ""}, new {@class = "active"})
                </li>
                <li><a class="dropdown-button" href="#" data-activates="dropdown1">Галерея<i class="material-icons right">arrow_drop_down</i></a></li>

                <li>
                    @Html.ActionLink("Библиотека", "Index", "Home", new {area = ""}, new {@class = "active"})
                </li>
                <li>
                    @Html.ActionLink("О проекте", "Index", "Home", new {area = ""}, new {@class = "active"})
                </li>
                <li>
                    @Html.ActionLink("Контакты", "Index", "Home", new {area = ""}, new {@class = "active"})
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Личный кабинет", "Profile", "Account", new { area = "" }, new { @class = "active" })
                    </li>
                    <li>
                        @Html.ActionLink("Выйти", "Logoff", "Account", new { area = "" }, new { @class = "active" })
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink("Регистрация", "Register", "Account", new { area = "" }, new { @class = "active" })
                    </li>
                    <li>
                        @Html.ActionLink("Войти", "Login", "Account", new { area = "" }, new { @class = "active" })
                    </li>
                }
            </ul>
        </div>
    </nav>
</div>
<div class="body-content">
    @RenderBody()

</div>
<footer class="page-footer" style="background-color: #2c2c2c">
    <div class="container">
        <div class="row">
            <div class="col s4">
                <h4 class="white-text">LASER EXPERTISE</h4>
            </div>
            <div class="col s2 vertical-line-right">
                <a>
                    <p class="white-text">
                        Художники
                    </p>
                </a>
                <a>
                    <p class="white-text">
                        Библиотеки
                    </p>
                </a>
                <a>
                    <p class="white-text">
                        Галерея
                    </p>
                </a>
                <a>
                    <p class="white-text">
                        О проекте
                    </p>
                </a>
            </div>
            <div class="col s6">
                <p class="white-text">Соцсети</p>
                <div>
                    ...
                </div>
                <p class="white-text">Подписка</p>
                <input type="email" placeholder="Ваш e-mail" class="white"/>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            © @DateTime.Now.Year - Laser Expertise
        </div>
    </div>
</footer>

@RenderSection("scripts", required: false)
</body>
</html>
